doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href='/style.css')
  body
    header
      img.logo(src='/buzzer-logo.svg')

    div.container
      h2=`Active Members`
      ol.js-active
        each user in users
          li=`${user.name} on Team ${user.team}`
      button.js-deactivate='Clear Members'
      h2=`Buzzes`
      ol.js-buzzes
        each buzz in buzzes
          li=`${buzz.name} on Team ${buzz.team}`
      button.js-clear='Clear buzzes'

    script(src='/socket.io/socket.io.js')
    script(src='/host.js')
